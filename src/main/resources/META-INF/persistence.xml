<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="locadora" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <!-- Permitir escaneamento automático de entidades -->
        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <!-- Entidades da etapa 1 -->


        <class>edu.ifma.labd.modelo.Cliente</class>
        <class>edu.ifma.labd.modelo.Locacao</class>
        <class>edu.ifma.labd.modelo.UtilizacaoConsole</class>
        <class>edu.ifma.labd.modelo.Console</class>
        <class>edu.ifma.labd.modelo.Acessorio</class>
        <class>edu.ifma.labd.modelo.Plataforma</class>
        <class>edu.ifma.labd.modelo.Jogo</class>
        <class>edu.ifma.labd.modelo.ItemLocacao</class>
        <class>edu.ifma.labd.modelo.PrecoPlataforma</class>


        <properties>
            <!-- Atualize para jakarta.persistence.* -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/locadora_jogos?useSSL=false&amp;createDatabaseIfNotExist=true"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="botic@ria2025"/>

            <!-- Configurações do Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>